<h1>Saved Records</h1>

<% if @records.any? %>
  <table border="1" cellspacing="0" cellpadding="8">
    <thead>
      <tr>
        <th>Original Text</th>
        <th>Encoded Text</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= record.original_text %></td>
          <td><%= record.translated_text %></td>
          <td><%= record.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No records found.</p>
<% end %>
